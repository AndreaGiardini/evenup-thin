[Unit]
Description=Thin (<%= @name %>) service
After=network.target

[Service]
Type=forking
PIDFile=/var/run/lock/subsys/<%= @name %>.<%= @port %>
ExecStart=/usr/bin/thin -C /etc/thin/<%= @name %>.yml start
ExecReload=/usr/bin/thin -C /etc/thin/<%= @name %>.yml restart
ExecStop=/usr/bin/thin -C /etc/thin/<%= @name %>.yml stop

[Install]
WantedBy=multi-user.target
